<?xml version="1.0" encoding="utf-8"?>

<resources>

	<!-- Base application theme is the default theme. -->
	<style name="Theme" parent="android:Theme" />

	<style name="Theme.Startup">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">
			@drawable/fake
		</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="location_text">
		<item name="android:gravity">center</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#ffcccccc</item>
		<item name="android:textSize">@dimen/text_size_larger</item>
		<item name="android:padding">@dimen/location_text_padding</item>
	</style>

</resources>
